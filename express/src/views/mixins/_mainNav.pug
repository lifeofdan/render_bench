mixin mainNav
  div(class="navbar bg-base-100 drop-shadow-md z-50" style="position:sticky;top:0;left:0;")
    div(class="navbar-start")
      div(id="c-main-navbar-div" class="dropdown uppercase font-semibold lg:hidden")
        input(id="c-main-navbar-checkbox" type="checkbox")
        label(for="c-main-navbar-checkbox" class="btn btn-square btn-ghost")
          span(id="c-main-navbar-icons")
            svg(id="c-main-navbar-hb-icon" class="fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512")
              path(d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z")
            svg(id="c-main-navbar-close-icon" class="fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512")
              polygon(points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49")
        ul(id="c-main-navbar-ul" class="menu dropdown-content mt-3 -ml-2 shadow bg-base-100 rounded-box w-screen")
          li
            a courses
          li
            a about
          li
            a contact
      a(href="/" class="btn btn-ghost normal-case text-xl") Courseable
    div(class="navbar-center hidden lg:flex")
      ul(class="menu menu-horizontal p-0 uppercase font-semibold")
        li
          a courses
        li
          a about
        li 
          a contact
    div(class="navbar-end")
      a(href="/login" class="btn btn-ghost") Login
